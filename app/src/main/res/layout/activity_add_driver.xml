<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    tools:context=".Driver.AddDriverActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back_arrow"
            app:tint="@color/dark_blue" />

        <TextView
            android:id="@+id/personl_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Sub Driver Request"
            android:textColor="@color/dark_blue"
            android:textSize="22sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/request_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <TextView
                android:id="@+id/status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Under review"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/red"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Submission Message"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/ed_message"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:inputType="textPersonName"
                android:layout_gravity="top"
                android:gravity="start"
                android:maxLines="4"
                android:background="@drawable/border_layout"
                android:hint="message"
                />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:text="Send Request"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dataField_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_below="@+id/personl_text"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/back_image"
                android:text="Sub driver Full Name"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/ed_fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:inputType="textPersonName"
                android:background="@drawable/border_layout"
                android:hint="Full Name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CNIC Number"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/ed_cardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:inputType="text"
                android:background="@drawable/border_layout"
                android:hint="CNIC Number"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver username"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/ed_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:inputType="text"
                android:background="@drawable/border_layout"
                android:hint="Driver Username"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days to Hire"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/ed_daysHire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textSize="13sp"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:inputType="number"
                android:background="@drawable/border_layout"
                android:hint="Enter Days"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/ed_phoneDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:inputType="number"
                android:background="@drawable/border_layout"
                android:hint="Enter Phone Number"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Address"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/ed_address"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_gravity="top"
                android:gravity="top"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:inputType="textPostalAddress"
                android:background="@drawable/border_layout"
                android:hint="Enter Home Address"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Password"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:inputType="text"
                android:background="@drawable/border_layout"
                android:hint="Driver Password"
                />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="NEXT"
                android:layout_marginTop="60dp"
                android:backgroundTint="@color/red"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cornerRadius="10dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:layout_marginBottom="20dp"
                />

        </LinearLayout>



    </LinearLayout>


</ScrollView>