<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/background_primary"
    tools:context=".ProfileProgress.VehicleDetailsActivity">

    <ImageView
        android:id="@+id/back_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_back"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/personl_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Vehicle Details"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/dataField_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/personl_text"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back_image"
            android:text="Vehicle Owner Name"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/ed_vehicleOwnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:inputType="textPersonName"
            android:background="@drawable/border_layout"
            android:hint="Full Name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Number"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/ed_vehicleNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:inputType="text"
            android:background="@drawable/border_layout"
            android:hint="Vehicle Number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/ed_driverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="13sp"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:inputType="text"
            android:background="@drawable/border_layout"
            android:hint="Driver Name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Type"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_vehicleType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:inputType="number"
            android:background="@drawable/border_layout"
            android:hint="Enter Phone Number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Details (optional)"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/ed_vehicleDetails"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_gravity="top"
            android:gravity="top"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:inputType="textPostalAddress"
            android:background="@drawable/border_layout"
            android:hint="Details...."
            />

    </LinearLayout>


    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        android:text="submit"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAlignment="center"
        app:cornerRadius="10dp" />

</RelativeLayout>