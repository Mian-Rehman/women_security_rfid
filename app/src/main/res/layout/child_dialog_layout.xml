<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Update Child Information"
        android:background="@color/dark_blue"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#fff"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_gravity="center"
      android:padding="20dp"
      android:gravity="center"
      >
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Full Name"
          android:id="@+id/ed_fullname"
          android:layout_marginTop="10dp"
          android:background="@drawable/border_layout"
          android:padding="15dp"
          android:textSize="20sp"/>

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Child Name"
          android:id="@+id/ed_childName"
          android:background="@drawable/border_layout"
          android:padding="15dp"
          android:layout_marginTop="10dp"
          android:textSize="20sp"/>

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Institute Name"
          android:id="@+id/ed_instituteName"
          android:background="@drawable/border_layout"
          android:padding="15dp"
          android:layout_marginTop="10dp"
          android:textSize="20sp"/>


      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Institute Address"
          android:id="@+id/ed_instituteAddress"
          android:layout_marginTop="10dp"
          android:background="@drawable/border_layout"
          android:padding="15dp"
          android:textSize="20sp"/>

      <Button
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:text="Update"
          android:id="@+id/btn_submit"
          android:background="@color/dark_blue"
          android:textColor="#fff"
          android:layout_gravity="center"
          android:textSize="20sp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          />
  </LinearLayout>

</LinearLayout>